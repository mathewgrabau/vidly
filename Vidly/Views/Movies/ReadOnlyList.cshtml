@{
    ViewBag.Title = "Movies";
}

<h2>Movies</h2>


    <table ID="movies" class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
        </thead>
    </table>

@section scripts {
    <script>
        $(function() {
            var dataTable = $("#movies").DataTable({
                ajax: {
                    "url": "/api/movies",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name"
                    },
                    {
                        data: "genre.name"
                    }
                ]
            });
        });
    </script>
}